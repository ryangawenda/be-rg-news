{
  "GET /api": {
    "description": "serves up a json representation of all the available endpoints of the api"
  },
  "GET /api/topics": {
    "description": "serves an array of all topics",
    "queries": [],
    "exampleResponse": {
      "topics": [{ "slug": "football", "description": "Footie!" }]
    }
  },
  "GET /api/articles": {
    "description": "serves an array of all articles",
    "queries": ["author", "topic", "sort_by", "order"],
    "exampleResponse": {
      "articles": [
        {
          "title": "Seafood substitutions are increasing",
          "topic": "cooking",
          "author": "weegembump",
          "body": "Text from the article..",
          "created_at": "2018-05-30T15:59:13.341Z",
          "votes": 0,
          "comment_count": 6
        }
      ]
    }
  },
  "GET /api/articles/:article" : {
    "description" : "serves an object with all article properties",
    "queries" : "article_id",
    "exampleResponse" : 
      {
        "title": "Seafood substitutions are increasing",
          "topic": "cooking",
          "author": "weegembump",
          "body": "Text from the article..",
          "created_at": "2018-05-30T15:59:13.341Z",
          "votes": 0,
          "comment_count": 6
        
    }

  },

  "GET /api/articles/:article/comments" : {
    "description" : "serves an array with all comment objects for a given article",
    "queries" : "article_id",
    "exampleResponse" : 
      {
       "comments" : [{
          "comment_id": 19,
          "body": "I love posting comments",
          "article_id": 2,
          "author": "icellusedkars",
          "votes": 0,
          "created_at": "2025-01-30T12:10:22.047Z"
      }]
        
    }

  },

  "POST /api/articles/:article/comments" : {
    "description" : "posts a comment to a given article_id",
    "queries" : "article_id",
    "exampleResponse" : 
      {
       "comments" : {
          "comment_id": 19,
          "body": "I love posting comments",
          "article_id": 2,
          "author": "icellusedkars",
          "votes": 0,
          "created_at": "2025-01-30T12:10:22.047Z"
      }
        
    }

  }

}
